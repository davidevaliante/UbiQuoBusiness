<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.firebase.notification.test.ubiquobusiness.ContactsFragment"
    android:fillViewport="true"
    android:fitsSystemWindows="true"
    android:background="@drawable/main_gradient">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <TextView
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="Inserisci almeno un contatto\ne conferma il nuovo evento !"
            android:textColor="@color/pureWhite"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/textView2" />

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView9"
            android:id="@+id/cardView10">
                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:inputType="textCapSentences"
                        android:id="@+id/firstContactName"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:backgroundTint="@color/pureWhite"
                        android:drawableLeft="@drawable/blue_user_24"
                        android:drawablePadding="16dp"
                        android:hint="Nome primo contatto"
                        android:paddingStart="16dp"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey" />

                    <EditText
                        android:inputType="number"
                        android:id="@+id/firstContactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="52dp"
                        android:backgroundTint="@color/pureWhite"
                        android:drawableLeft="@drawable/blue_phone_24"
                        android:drawablePadding="16dp"
                        android:hint="Numero primo contatto"
                        android:paddingStart="16dp"
                        android:textColor="@color/light_grey"
                        android:textColorHint="@color/light_grey" />

                </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/cardView9">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/secondContactName"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/pureWhite"
                    android:drawableLeft="@drawable/blue_user_24"
                    android:drawablePadding="16dp"
                    android:hint="Nome primo contatto"
                    android:paddingStart="16dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/secondContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/pureWhite"
                    android:drawableLeft="@drawable/blue_phone_24"
                    android:drawablePadding="16dp"
                    android:hint="Numero primo contatto"
                    android:paddingStart="16dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey" />

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/cardView10"
            android:id="@+id/cardView11">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textCapSentences"
                    android:id="@+id/thirdContactName"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/pureWhite"
                    android:drawableLeft="@drawable/blue_user_24"
                    android:drawablePadding="16dp"
                    android:hint="Nome primo contatto"
                    android:paddingStart="16dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey" />

                <EditText
                    android:inputType="number"
                    android:id="@+id/thirdContactNumber"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:backgroundTint="@color/pureWhite"
                    android:drawableLeft="@drawable/blue_phone_24"
                    android:drawablePadding="16dp"
                    android:hint="Numero primo contatto"
                    android:paddingStart="16dp"
                    android:textColor="@color/light_grey"
                    android:textColorHint="@color/light_grey" />

            </LinearLayout>
        </android.support.v7.widget.CardView>


        <RelativeLayout
            android:id="@+id/confirmLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="66dp"
            android:layout_marginEnd="64dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/borded_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cardView11"
            app:layout_constraintVertical_bias="0.781">

            <TextView
                android:id="@+id/sometext"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingEnd="32dp"
                android:paddingStart="32dp"
                android:paddingTop="16dp"
                android:text="Conferma"
                android:textColor="@color/pureWhite"
                android:textSize="@dimen/abc_text_size_medium_material" />
        </RelativeLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v4.widget.NestedScrollView>
